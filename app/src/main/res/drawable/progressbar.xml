<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="60dip" />
            <gradient
                android:angle="90"
                android:centerColor="@color/accent_dark_material_dark"
                android:centerY="0.5"
                android:endColor="#ff747674"
                android:startColor="@color/primary_dark_material_dark" />
        </shape>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="5dip" />
                <gradient
                    android:angle="0"
                    android:endColor="@color/accent_dark_material_dark"
                    android:startColor="@color/primary_dark_material_dark" />
            </shape>
        </clip>
    </item>
</layer-list>