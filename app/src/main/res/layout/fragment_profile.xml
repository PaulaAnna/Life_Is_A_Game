<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:divider="@drawable/empty_tall_divider"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_horizontal_margin_logo"
    android:paddingLeft="@dimen/activity_horizontal_margin_logo"
    android:paddingRight="@dimen/activity_horizontal_margin_logo"
    android:paddingTop="75dp"
    android:showDividers="middle">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/levelImage"
        />

    <ProgressBar
        style="?android:attr/progressBarStyleHorizontal"
        android:progressDrawable="@drawable/progressbar"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:id="@+id/progressBarLevel"
        android:contentDescription="xp to next level"
        android:layout_weight="0.15"
        android:max="100"
        android:progress="100"
        android:layout_marginTop="128dp"
        android:layout_below="@+id/levelImage"
        android:layout_toRightOf="@+id/levelImage"
        android:layout_toEndOf="@+id/levelImage" />

    <TextView
        android:id="@+id/current_xp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:hint="Current xp"
        android:textSize="24dp"
        android:layout_below="@+id/progressBarLevel"
        android:layout_toRightOf="@+id/levelImage"
        android:layout_toEndOf="@+id/levelImage"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/level"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/current_xp"
        android:hint="Level"
        android:textSize="24dp"
        android:layout_marginTop="10dp"
        />

    <TextView
        android:id="@+id/username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_below="@+id/level"
        android:layout_toRightOf="@+id/levelImage"
        android:layout_toEndOf="@+id/levelImage"
        android:hint="@string/username"
        android:textSize="24dp"
        android:layout_marginTop="10dp"
   />

    <TextView
        android:id="@+id/firstname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:hint="@string/first_name"
        android:textSize="24dp"
        android:layout_below="@id/username"
        android:layout_marginTop="10dp" />

    <TextView
        android:id="@+id/lastname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:hint="@string/last_name"
        android:textSize="24dp"
        android:layout_below="@+id/firstname"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:hint="location"
        android:textSize="24dp"
        android:layout_below="@+id/lastname"
        android:layout_marginTop="10dp"/>



<Button
        android:id="@+id/acoount_settings_button"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/lig_button"
    android:text="@string/change_account_settings"
    android:layout_alignParentBottom="true"
    android:layout_toRightOf="@+id/levelImage"
    android:layout_toEndOf="@+id/levelImage" />

</RelativeLayout>